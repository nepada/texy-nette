{
    "name": "nepada/texy-nette",
    "type": "library",
    "license": "BSD-3-Clause",
    "description": "Texy integration for Nette.",
    "keywords": ["nette", "latte", "texy"],
    "support": {
        "email": "petr@pada.cz",
        "issues": "https://github.com/nepada/template-factory/issues"
    },
    "authors": [
        {
            "name": "Petr MorÃ¡vek",
            "email": "petr@pada.cz"
        }
    ],
    "require": {
        "php": ">=7.4.0 <8.2",
        "nette/utils": "^3.2@dev",
        "texy/texy": "^3.1.5@dev"
    },
    "require-dev": {
        "nette/tester": "2.4.2",
        "phpstan/phpstan": "1.8.0",
        "phpstan/phpstan-strict-rules": "1.3.0",
        "phpstan/phpstan-nette": "1.0.0",
        "nepada/phpstan-nette-tester": "0.4.0",
        "spaze/phpstan-disallowed-calls": "2.4.0",
        "shipmonk/phpstan-rules": "1.0.1",
        "php-parallel-lint/php-parallel-lint": "1.3.2",
        "nepada/coding-standard": "7.5.1",
        "nette/di": "^3.0.6@dev",
        "nette/schema": "^1.0.3@dev",
        "latte/latte": "^2.7@dev",
        "nepada/template-factory": "^2.2.0@dev",
        "nette/bootstrap": ">=3.0@dev",
        "nette/application": ">=3.1.4"
    },
    "suggest": {
        "nette/di": "for integration with Nette DI container",
        "latte/latte": "to use Latte with custom Texy! macros in templates",
        "nepada/template-factory": "to automatically inject required services into Latte templates"
    },
    "autoload": {
        "psr-4": {
            "Nepada\\Bridges\\": "src/Bridges/",
            "Nepada\\Texy\\": "src/Texy/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NepadaTests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.3-dev"
        }
    }
}
